{
    "env": {
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "unicorn",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-unused-vars": "error",
        "no-undef": "error",
        "no-mixed-spaces-and-tabs": "error",
        "no-multi-spaces": [
            "error"
        ],
        "no-console": "warn"
    }
}